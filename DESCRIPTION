Package: ClaimsProblems
Type: Package
Title: Analysis of Conflicting Claims
Version: 0.2.1
Authors@R: c(
      person("Iago","Núñez Lugilde",role=c("aut","cre"), email="iago.nunez.lugilde@uvigo.es",comment="SIDOR. Universidade de Vigo. Departamento de Estatística e Investigación Operativa. Spain"),
